<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_height="144dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <TextView
                style="@style/ShortcutSubheadElement"
                android:text="@string/card_shortcut_message_title" />

            <EditText
                style="@style/ShortcutEditText"
                android:id="@+id/editTextShortcutName" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="144dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <TextView
                style="@style/ShortcutSubheadElement"
                android:text="@string/card_shortcut_icon_title" />

            <android.support.v7.widget.SwitchCompat
                style="@style/ShortcutSwitch"
                android:id="@+id/switchIcon"
                android:text="@string/card_shortcut_icon_subtitle" />
        </LinearLayout>
    </LinearLayout>
</merge>